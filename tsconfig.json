{
  "compilerOptions": {
    "outDir": "./dist",

    "declaration": true,
    "sourceMap": true,

    "module": "CommonJS",
    "target": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext"],
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "**/dist",
  ]
}
